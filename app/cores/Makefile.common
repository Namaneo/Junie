BUILD_FLAGS += \
	CC="$(CC)" CXX="$(CXX)" AR="$(AR)" \
	STATIC_LINKING=1 \
	STATIC_LINKING_LINK=1

DEFINES  += \
	-D_WASI_EMULATED_SIGNAL

CFLAGS   += $(DEFINES)
CXXFLAGS += $(DEFINES)

all: $(TARGET)

$(TARGET):
	CFLAGS="$(CFLAGS)" CXXFLAGS="$(CXXFLAGS)" LDFLAGS="$(LDFLAGS)" \
		make -C $(BUILD_DIR) $(BUILD_FLAGS) platform=$(PLATFORM) GIT_VERSION=

clean:
	make -C $(BUILD_DIR) $(BUILD_FLAGS) platform=$(PLATFORM) clean